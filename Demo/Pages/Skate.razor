@page "/skate"
<h3>SKATE</h3>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 1em;
            margin-bottom: 0; 
        }

        h3 {
            margin: 0; 
        }

        .container {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            padding: 2em;
        }

        .product {
            margin: 1em;
            border: 1px solid #ddd;
            padding: 1em;
            text-align: center;
            background-color: white;
            cursor: pointer;
        }

            .product img {
                width: 100%;
                max-height: 150px;
                object-fit: cover;
                margin-bottom: 1em;
            }

        #productDetails {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            justify-content: center;
            align-items: center;
            overflow: auto;
            cursor: pointer; 
        }

        .details-content {
            background-color: white;
            padding: 2em;
            max-width: 600px;
            width: 80%;
            text-align: center;
        }

        #closeBtn {
            position: absolute;
            top: 15px;
            right: 15px;
            cursor: pointer;
        }

        .details-content {
            pointer-events: auto; 
    </style>
</head>

<body>

    <div class="container">
        <div class="product" onclick="showProductDetails(1)">
            <a href="/skate"><img src="/images/skate1.jpg" alt="Your Image 1"></a>
            <p>Cat Logo Deck</p>
            <a href="/addtocart" class="button">ADD TO CART</a>
        </div>

        <div class="product" onclick="showProductDetails(2)">
            <a href="/skate"><img src="/images/skate2.jpg" alt="Your Image 1"></a>
            <p>Tyler Logo Deck</p>
            <a href="/addtocart" class="button">ADD TO CART</a>
        </div>

        <div class="product" onclick="showProductDetails(3)">
            <a href="/skate"><img src="/images/skate3.jpg" alt="Your Image 1"></a>
            <p>Towelie Logo Deck</p>
            <a href="/addtocart" class="button">ADD TO CART</a>
        </div>

        <div class="product" onclick="showProductDetails(4)">
            <a href="/skate"><img src="/images/skate4.jpg" alt="Your Image 1"></a>
            <p>Keanu Reeves Logo Deck</p>
            <a href="/addtocart" class="button">ADD TO CART</a>
        </div>
    </div>

    <div id="productDetails" onclick="hideProductDetails()">
        <div class="details-content" onclick="event.stopPropagation();">
            <span id="closeBtn" onclick="hideProductDetails">&times;</span>
            <h2>Product Details</h2>
            <img id="productDetailsImage" src="" alt="Product">
            <p id="productDetailsText">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
        </div>
    </div>

    <script>
        function showProductDetails(productNumber) {
            var productDetails = document.getElementById('productDetails');
            var image = document.getElementById('productDetailsImage');
            var productDetailsText = document.getElementById('productDetailsText');

            // Setze das Bild für die Details
            image.src = '/images/skate' + productNumber + '.jpg';

            // Ändere die Bildgröße beim Klick
            image.addEventListener('click', function () {
                if (image.style.width === '100%') {
                    image.style.width = '50%'; // Ändere die Größe hier nach Bedarf
                } else {
                    image.style.width = '100%'; // Zurück zur ursprünglichen Größe
                }
            });

            // Setze den Text und den Preis für die Details basierend auf dem Produkt
            var detailsText = getProductDetailsText(productNumber);
            var price = getProductPrice(productNumber);

            productDetailsText.innerText = detailsText + ' Preis: ' + price + ' CHF';

            // Zeige die Produkt-Details an
            productDetails.style.display = 'flex';
        }

        function hideProductDetails() {
            var productDetails = document.getElementById('productDetails');
            productDetails.style.display = 'none';
        }

        // Funktion zur Rückgabe von Produktdetails basierend auf der Produktnummer
        function getProductDetailsText(productNumber) {
            switch (productNumber) {
                case 1:
                    return 'Cat Logo Deck: Hochwertiges Deck aus Ahornholz und langlebige Rollen.';
                case 2:
                    return 'Tyler Logo Deck: Leichtes Aluminium-Chassis und rutschfeste Grifftape.';
                case 3:
                    return 'Towelie Logo Deck: Robuste Kunststoffkonstruktion und ABEC-7 Kugellager.';
                case 4:
                    return 'Keanu Reeves Logo Deck: Verstellbare Trucks für individuelle Fahrpräferenzen.';
                default:
                    return 'Details für Produkt ' + productNumber;
            }
        }

        // Funktion zur Rückgabe des Preises basierend auf der Produktnummer
        function getProductPrice(productNumber) {
            switch (productNumber) {
                case 1:
                    return 59.99;
                case 2:
                    return 59.99;
                case 3:
                    return 69.99;
                case 4:
                    return 109.99;
                default:
                    return 0; // Default-Preis, falls die Produktnummer nicht erkannt wird
            }
        }

        function addToCart(productNumber) {
            var cartItemsList = document.getElementById('cartItemsList');
            var productDetailsText = getProductDetailsText(productNumber);
            var price = getProductPrice(productNumber);

            // Create a list item for the cart
            var listItem = document.createElement('li');
            listItem.innerText = 'Product: ' + productDetailsText + ', Price: ' + price + ' CHF';

            // Append the list item to the cart
            cartItemsList.appendChild(listItem);

            // Show the cart page
            document.getElementById('cartPage').style.display = 'block';
        }

        function checkout() {
            // Perform actions when the user clicks the checkout button
            alert('Checkout functionality will be implemented here.');
        }
    </script>
</body>

</html>


